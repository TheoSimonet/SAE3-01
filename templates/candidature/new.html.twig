{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/candidature/form.css') }}"/>
{% endblock %}

{% block title %}
    Candidature à un stage
{% endblock %}

{% block body %}
    <div class="right__top">
       <p>Candidature au stage n°{{ stage.id }}</p>
    </div>
    <div class="right__center">
        {{ form_start(form) }}
        {{ form_row(form.cvFilename) }}
        <div class="buttons">
            <a href="{{ app.request.headers.get('referer') }}">Annuler</a>
            {{ form_row(form.Valider) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}