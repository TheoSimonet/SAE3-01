{% extends 'base.html.twig' %}

{% block title %}
    Candidatures retenues pour le stage {{ stage.titre }}
{% endblock %}

{% block body %}
    {% set retenues = 0 %}
    {% for candidature in stage.candidatures %}
        {% if candidature.retenue == 1 %}
            {% set retenues = retenues + 1 %}
        {% endif %}
    {% endfor %}

    {% if retenues > 0 %}
        <h1>Liste des candidatures retenues pour le stage {{ stage.titre }}</h1>

        {% set x = 1 %}
        {% for candidature in stage.candidatures %}
            {% if candidature.retenue == 1 %}
                <h2>Candidature nÂ°{{ x }}</h2>
                <p>{{ candidature.idUser.firstname }} {{ candidature.idUser.lastName }}</p>
                <p>Faite le {{ candidature.date|date("d/m/Y Ã  H:i",  "Europe/Paris") }}</p>
                <a href="{{ path('app_stage_detail-candidature', {id: candidature.id}) }}">Voir plus</a>
                {% set x = x + 1 %}
            {% endif %}
        {% endfor %}
    {% else %}
        <h1>Aucune candidature retenue pour le stage {{ stage.titre }}</h1>
    {% endif %}
{% endblock %}

