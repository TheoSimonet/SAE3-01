{% extends 'base.html.twig' %}

{% block title %}Master IA - URCA{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/actus/actus__item.css') }}"/>
{% endblock %}

{% block body %}
    <div class="right__top">
        <p>
            <i class="bx bx-news"></i>
            Liste des projets TER
        </p>
    </div>
    <div class="right__center">
        <div class="actu__item">
            <div class="actu__item__title">
                <p>Voici la liste des projets TER</p>
            </div>
            <div class="actu__item__content">
                <div class="content__text">
                    <p>
                        <ul class="actu__list">
                            {% for projetTER in projetsTER %}
                                <li>{{ projetTER.titre }}</li>
                            {% endfor %}
                        </ul>
                    </p>
                </div>
            </div>
            <div class="actu__item__date">
                <p>
                    <i class="bx bx-time-five"></i>
                    Post√© le 10/08/2022
                </p>
            </div>
        </div>
    </div>
{% endblock %}